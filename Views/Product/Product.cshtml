@using AgriEnergy_Connect.Models
@model IEnumerable<Product>

<div class="container mt-4">
    <h4 class="mb-3">Product Listings</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Subcategory</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Subcategory</td>
                    <td>@product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
