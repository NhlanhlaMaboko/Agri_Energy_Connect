@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>Welcome, Employee!</h3>
        </div>
        <div class="card-body">
            <p class="lead">Manage farmer profiles and view all products.</p>
            <a asp-controller="Farmer" asp-action="Create" class="btn btn-outline-primary me-2">Add New Farmer</a>
            <a asp-controller="Product" asp-action="AllProducts" class="btn btn-outline-dark">View All Products</a>
        </div>
    </div>
</div>
