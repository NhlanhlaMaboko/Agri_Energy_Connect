@model IEnumerable<AgriEnergy_Connect.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "All Products";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Farmer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Farmer?.ApplicationUser?.UserName</td>
            </tr>
        }
    </tbody>
</table>
