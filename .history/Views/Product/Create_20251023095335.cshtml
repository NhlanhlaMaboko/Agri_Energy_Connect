@model AgriEnergy_Connect.Models.Product

@{
    ViewData["Title"] = "Add Product";

    var categories = new List<string> { "Grains", "Dairy", "Vegetables", "Fruits", "Livestock", "Other" };
    var subcategories = new Dictionary<string, List<string>>
    {
        { "Grains", new List<string> { "Maize", "Wheat", "Sorghum", "Barley" } },
        { "Dairy", new List<string> { "Milk", "Cheese", "Yogurt", "Butter" } },
        { "Vegetables", new List<string> { "Tomatoes", "Spinach", "Carrots", "Cabbage" } },
        { "Fruits", new List<string> { "Apples", "Bananas", "Oranges", "Grapes" } },
        { "Livestock", new List<string> { "Cattle", "Goats", "Chickens", "Sheep" } },
        { "Other", new List<string> { "Compost", "Honey", "Eggs", "Seeds" } }
    };
}

<h2 class="mb-4">➕ Add New Product</h2>

<form asp-action="Create" method="post" id="productForm">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select id="categorySelect" class="form-select">
            <option value="">-- Select Category --</option>
            @foreach (var cat in categories)
            {
                <option value="@cat">@cat</option>
            }
        </select>
        <input type="hidden" asp-for="Category" id="CategoryHidden" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Subcategory</label>
        <select id="subcategorySelect" class="form-select">
            <option value="">-- Select Subcategory --</option>
        </select>
        <input type="hidden" asp-for="Subcategory" id="SubcategoryHidden" />
        <span asp-validation-for="Subcategory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price (ZAR)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductionDate" class="form-label">Production Date</label>
        <input asp-for="ProductionDate" class="form-control" type="date" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Product</button>
</form>

@section Scripts {
    <script>
        const subcategories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(subcategories));
        const categorySelect = document.getElementById("categorySelect");
        const subcategorySelect = document.getElementById("subcategorySelect");
        const categoryHidden = document.getElementById("CategoryHidden");
        const subcategoryHidden = document.getElementById("SubcategoryHidden");
        const form = document.getElementById("productForm");

        // Populate subcategories when category changes
        categorySelect.addEventListener("change", function () {
            const selectedCategory = this.value;
            categoryHidden.value = selectedCategory; // bind to hidden input

            subcategorySelect.innerHTML = '<option value="">-- Select Subcategory --</option>';
            subcategoryHidden.value = "";

            if (subcategories[selectedCategory]) {
                subcategories[selectedCategory].forEach(sub => {
                    const option = document.createElement("option");
                    option.value = sub;
                    option.text = sub;
                    subcategorySelect.appendChild(option);
                });
            }
        });

        // Bind subcategory to hidden input
        subcategorySelect.addEventListener("change", function () {
            subcategoryHidden.value = this.value;
        });

        // Ensure hidden inputs are populated before submit
        form.addEventListener("submit", function () {
            categoryHidden.value = categorySelect.value;
            subcategoryHidden.value = subcategorySelect.value;
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
