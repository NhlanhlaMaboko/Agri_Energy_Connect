@model AgriEnergy_Connect.Models.Product

@{
    ViewData["Title"] = "Add Product";

    var categories = new List<string> { "Grains", "Dairy", "Vegetables", "Fruits", "Livestock", "Other" };
    var subcategories = new Dictionary<string, List<string>>
    {
        { "Grains", new List<string> { "Maize", "Wheat", "Sorghum", "Barley" } },
        { "Dairy", new List<string> { "Milk", "Cheese", "Yogurt", "Butter" } },
        { "Vegetables", new List<string> { "Tomatoes", "Spinach", "Carrots", "Cabbage" } },
        { "Fruits", new List<string> { "Apples", "Bananas", "Oranges", "Grapes" } },
        { "Livestock", new List<string> { "Cattle", "Goats", "Chickens", "Sheep" } },
        { "Other", new List<string> { "Compost", "Honey", "Eggs", "Seeds" } }
    };
}

<h2 class="mb-4">➕ Add New Product</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" autocomplete="off" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-select" autocomplete="off">
            <option value="">-- Select Category --</option>
            @foreach (var cat in categories)
            {
                <option value="@cat">@cat</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Subcategory" class="form-label"></label>
        <select asp-for="Subcategory" class="form-select" autocomplete="off">
            <option value="">-- Select Subcategory --</option>
        </select>
        <span asp-validation-for="Subcategory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" autocomplete="off" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductionDate" class="form-label"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" autocomplete="off" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Product</button>
</form>

@section Scripts {
    <script>
        const subcategories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(subcategories));
        const categorySelect = document.querySelector('[asp-for="Category"]');
        const subcategorySelect = document.querySelector('[asp-for="Subcategory"]');

        categorySelect.addEventListener("change", function () {
            const selectedCategory = this.value;
            subcategorySelect.innerHTML = '<option value="">-- Select Subcategory --</option>';

            if (subcategories[selectedCategory]) {
                subcategories[selectedCategory].forEach(sub => {
                    const option = document.createElement("option");
                    option.value = sub;
                    option.text = sub;
                    subcategorySelect.appendChild(option);
                });
            }
        });
    </script>
}
